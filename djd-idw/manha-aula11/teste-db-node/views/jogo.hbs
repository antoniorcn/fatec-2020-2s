<html>
    <head>
        <link href="/css/bootstrap.min.css" rel="stylesheet"/>
        <title>Cadastro de Jogos</title>
    </head>
    <body>
        <div class="container">
            <h1>Cadastro de Jogos</h1>
            <form action="/jogo/inserir">
                <div class="form-group">
                    <label>Id:</label>
                    <input type="number" step="1" class="form-control" name="id"/>
                </div>
                <div class="form-group">
                    <label>Titulo:</label>
                    <input type="text" class="form-control" name="titulo"/>
                </div>
                <div class="form-group">
                    <label>Gênero:</label>
                    <select class="form-control" name="genero">
                        <option>Ação</option>
                        <option>Corrida</option>                
                        <option>FPS</option>
                        <option>RPG</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Plataforma:</label>
                    <select class="form-control" name="plataforma">
                        <option>Android</option>
                        <option>iPhone</option>
                        <option>Nintendo Wii</option>
                        <option>Nintendo DS</option>
                        <option>Nintendo Switch</option>
                        <option>PC</option>
                        <option>PS2</option>
                        <option>PS3</option>
                        <option>PS4</option>
                        <option>PS5</option>              
                        <option>XBOX 360</option>
                        <option>XBOX One</option>
                        <option>XBOX Series</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Quantidade de Jogadores</label>
                    <input type="number" step="1" class="form-control" name="qtd_jogadores"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Adicionar</button>
                </div>
            </form>
        </div>
    </body>
</html>